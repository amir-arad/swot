extends layout

block content
    if (media)
        script.
            window.open('!{media}', '_blank').focus();
    form.form-signin(action="/research", method="post", role="form")
        h2.form-signin-heading= title
        if (message != '')
            div.alert.alert-danger
                p !{message}
        input.form-control(type="password", name="id", placeholder="Subject barcode", required="required")
        button.btn.btn-lg.btn-primary.btn-block(type="submit") Begin Research